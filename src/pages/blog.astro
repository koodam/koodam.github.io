---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';
const allPosts = await Astro.glob('../pages/posts/*.md');
---
<BaseLayout>
	<h1>Blog</h1>
		
    <ul>
		{allPosts.map((post) => (
			<BlogPost url={post.url} title={post.frontmatter.title} />
		) )}
    </ul>

</BaseLayout>
